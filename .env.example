# Server
PORT=3000
BASE_URL=http://localhost:3000

# Database
DATABASE_PATH=./data/reviews.db

# Anthropic API (for review validation)
# Supports PPQ proxy - set BASE_URL to https://api.ppq.ai to use PPQ
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=

# Email (Resend - https://resend.com)
RESEND_API_KEY=
# Use 'onboarding@resend.dev' for testing, then your verified domain address for production
EMAIL_FROM=Bitcoin Review Raffle <onboarding@resend.dev>

# Admin
ADMIN_PASSWORD=changeme

# Telegram notifications (CoraTelegramBot)
# Bot token from @BotFather, Chat ID from your Telegram account
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
# Secret token for one-tap approve/reject links in Telegram messages
# Generate a strong random string: openssl rand -hex 32
TELEGRAM_APPROVE_TOKEN=

# Bitcoin
DONATION_ADDRESS=

# Voltage LND Node
LND_REST_URL=https://your-node.voltage.cloud:8080
LND_MACAROON=your-hex-encoded-admin-macaroon
AUTO_PAY_ENABLED=false
DEFAULT_PRIZE_SATS=100000
