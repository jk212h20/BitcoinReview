<script>
function copyToClipboard(elementId, btn) {
    var text;
    var el = document.getElementById(elementId);
    if (el.tagName === 'INPUT') {
        text = el.value;
    } else {
        text = el.textContent;
    }
    navigator.clipboard.writeText(text).then(function() {
        var orig = btn.textContent;
        btn.textContent = '‚úÖ Copied!';
        setTimeout(function() { btn.textContent = orig; }, 2000);
    });
}

function generateInvoice() {
    var amount = document.getElementById('invoice-amount').value;
    if (!amount || amount < 1) {
        alert('Please enter an amount in sats');
        return;
    }
    var btn = document.getElementById('gen-invoice-btn');
    btn.disabled = true;
    btn.textContent = '...';
    
    fetch('/api/generate-invoice', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ amount: parseInt(amount) })
    })
    .then(function(res) { return res.json(); })
    .then(function(data) {
        if (data.success) {
            document.getElementById('custom-invoice-text').textContent = data.bolt11.substring(0, 60) + '...';
            document.getElementById('custom-invoice-full').value = data.bolt11;
            document.getElementById('custom-invoice-result').classList.remove('hidden');
        } else {
            alert(data.error || 'Failed to generate invoice');
        }
        btn.disabled = false;
        btn.textContent = 'Generate';
    })
    .catch(function(err) {
        alert('Error generating invoice');
        btn.disabled = false;
        btn.textContent = 'Generate';
    });
}
</script>
