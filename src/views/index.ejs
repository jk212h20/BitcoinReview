            </div>
            <div class="text-center">
                <div class="w-16 h-16 bg-bitcoin text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">3</div>
                <h3 class="font-bold mb-2">Write a Review</h3>
                <p class="text-gray-600">Leave a Google review mentioning your Bitcoin purchase</p>
            </div>
            <div class="text-center">
                <div class="w-16 h-16 bg-bitcoin text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">4</div>
                <h3 class="font-bold mb-2">Win Bitcoin!</h3>
                <p class="text-gray-600">Every ~2 weeks, one lucky reviewer wins Bitcoin</p>
            </div>
        </div>
    </div>
</section>

<!-- Registration Form -->
<section id="register" class="py-16 bg-white">
    <div class="max-w-md mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-8">Register for the Raffle</h2>
        
        <div x-data="registrationForm()" class="bg-gray-50 rounded-lg p-6 shadow-sm">
            <form @submit.prevent="submit">
                <div class="mb-4">
                    <label class="block text-gray-700 font-medium mb-2">Email Address</label>
                    <input 
                        type="email" 
                        x-model="email"
                        required
                        class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-bitcoin focus:border-transparent"
                        placeholder="you@example.com"
                    >
                </div>
                
                <div class="mb-6">
                    <label class="block text-gray-700 font-medium mb-2">Lightning Address / LNURL</label>
                    <input 
                        type="text" 
                        x-model="lnurl"
                        required
                        class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-bitcoin focus:border-transparent"
                        placeholder="you@wallet.com or lnurl1..."
                    >
                    <p class="text-sm text-gray-500 mt-1">This is where we'll send your prize if you win!</p>
                </div>
                
                <button 
                    type="submit"
                    :disabled="loading"
                    class="w-full bg-bitcoin text-white py-3 rounded-lg font-bold hover:bg-bitcoin-dark transition disabled:opacity-50"
                >
                    <span x-show="!loading">Register</span>
                    <span x-show="loading">Registering...</span>
                </button>
            </form>
            
            <!-- Success/Error Messages -->
            <div x-show="message" x-cloak class="mt-4 p-4 rounded-lg" :class="success ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'">
                <span x-text="message"></span>
            </div>
        </div>
    </div>
</section>

<!-- Latest Winner -->
${typeof latestRaffle !== 'undefined' && latestRaffle ? `
<section class="py-16 bg-gradient-to-r from-yellow-400 to-orange-500 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-6">ðŸŽ‰ Latest Winner</h2>
        <div class="bg-white/20 backdrop-blur rounded-lg p-6">
            <div class="text-2xl font-bold mb-2">Block #${latestRaffle.block_height.toLocaleString()}</div>
            <div class="text-lg mb-2">${latestRaffle.email ? latestRaffle.email.replace(/(.{2}).*(@.*)/, '$1***$2') : 'Anonymous'}</div>
            ${latestRaffle.prize_amount_sats ? `<div class="text-xl font-bold">${latestRaffle.prize_amount_sats.toLocaleString()} sats</div>` : ''}
        </div>
    </div>
</section>
` : ''}

<!-- Donation Section -->
<section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-6">Support the Raffle</h2>
        <p class="text-gray-600 mb-8">
            This raffle is funded by community donations. All donations go directly to prize pools!
        </p>
        <div class="bg-white rounded-lg p-6 shadow-sm inline-block">
            <p class="text-sm text-gray-500 mb-2">Donation Address:</p>
            <code class="text-lg bg-gray-100 px-4 py-2 rounded block break-all">${typeof donationAddress !== 'undefined' ? donationAddress : 'Coming soon'}</code>
        </div>
    </div>
</section>

<script>
function registrationForm() {
    return {
        email: '',
        lnurl: '',
        loading: false,
        message: '',
        success: false,
        
        async submit() {
            this.loading = true;
            this.message = '';
            
            try {
                const response = await fetch('/api/register', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        email: this.email,
                        lnurl: this.lnurl
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    this.success = true;
                    this.message = data.message;
                    this.email = '';
                    this.lnurl = '';
                } else {
                    this.success = false;
                    this.message = data.error;
                }
            } catch (error) {
                this.success = false;
                this.message = 'Something went wrong. Please try again.';
            }
            
            this.loading = false;
        }
    }
}
</script>
` }) %>
